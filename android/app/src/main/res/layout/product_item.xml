<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="3"
    android:columnCount="4"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="0"
        />


    <TextView
        android:id="@+id/product_description"
        style="@style/AppTheme.LargeProductDescription"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:maxLines="2"
        android:scaleType="fitXY"
        />


    <TextView
        android:id="@+id/product_original_price"
        style="@style/AppTheme.OriginalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="bottom|start"
        android:singleLine="true" />

    <TextView
        android:id="@+id/product_discount_price"
        style="@style/AppTheme.DiscountPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_gravity="bottom|end"/>


    <ImageView
        android:id="@+id/indicator"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="3"
        android:layout_gravity="center|right|fill_vertical"
        android:layout_margin="8dp"
        app:srcCompat="@mipmap/disclosure_indicator" />


    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@color/greyish"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:layout_columnSpan="4"/>

</GridLayout>